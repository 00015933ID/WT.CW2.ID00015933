<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Link to Bootstrap CSS stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Title of the webpage -->
    <title>Blog</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Blog Articles</h1>
        <!-- Button to create a new article -->
        <a href="/articles/new" class="btn btn-success">New Article</a>
<!-- Loop through each article in the articles array -->
        <% articles.forEach(article => { %>
            <!-- Card to display article details -->
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= article.title %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>
                    <!-- Description of the article -->
                    <div class="card-text mb-2"><%= article.description %></div>
                    <!-- Button to read more about the article -->
                    <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                     <!-- Button to edit the article -->
                    <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                    <!-- Form to delete the article -->
                    <form action="/articles/<%= article.id %>?_method=DELETE" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
